    }
    .hero a {
      font-size: 0.9rem !important;
    }
  }
</style>




<!-- üîπ Pujas Cards -->
<section class="puja-list py-5">
  <div class="container">
    <% if @pujas.present? %>
      <div class="row g-4">
        <% @pujas.each do |puja| %>
          <div class="col-lg-4 col-md-6">
            <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
              <% if puja.image.attached? %>
                <%= image_tag puja.image, class: "card-img-top", style: "height:200px; object-fit:cover;" %>
              <% else %>
                <img src="https://via.placeholder.com/300x200" class="card-img-top">
              <% end %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title fw-bold mb-1"><%= puja.title %></h5>
                <p class="card-text text-muted mb-2" style="font-size: 0.9rem;"><%= truncate(puja.description, length: 100) %></p>
                <div class="mt-auto d-flex justify-content-between align-items-center">
                  <span class="fw-bold">‚Çπ<%= puja.base_price %></span>
                  
                  <!-- üü† Orange "Book" Button -->
                  <%= link_to "Book", puja_path(puja),
                      class: "btn btn-sm rounded-2",
                      style: "background-color: #ff7b00; color: white; font-weight: 600; border: none; transition: all 0.3s ease;",
                      onmouseover: "this.style.backgroundColor='#ff8c1a';",
                      onmouseout:  "this.style.backgroundColor='#ff7b00';"
                  %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center text-muted mt-4">üôè No Pujas available right now.</p>
    <% end %>
  </div>
</section>


