  <!-- ‚ú® Divine Overlay -->
  <div style="background: rgba(255, 136, 0, 0.25); position: absolute; inset: 0;"></div>

  <!-- üå∏ Content -->
  <div class="container position-relative">
    <h1 class="fw-bold mb-2" style="font-size: 1.8rem; color: #ffb300; text-shadow: 0 0 10px rgba(255, 187, 0, 0.6); font-family: 'Poppins', sans-serif;">
