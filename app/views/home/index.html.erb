<%= render 'shared/header' %>

<!-- Hero Slider -->
<div class="swiper mySwiper" style="width:100%; padding:50px 0;">
  <div class="swiper-wrapper">
    <div class="swiper-slide"><%= image_tag "Frame-32.png", class: "img-fluid rounded", alt: "Slide 1" %></div>
    <div class="swiper-slide"><%= image_tag "Frame-25-1.png", class: "img-fluid rounded", alt: "Slide 2" %></div>
    <div class="swiper-slide"><%= image_tag "images.jpeg", class: "img-fluid rounded", alt: "Slide 3" %></div>
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

<!-- Pooja Packages Section -->
<section class="container my-5">
  <h2 class="text-center mb-5 fw-bold">Our Pooja Packages</h2>
  <div class="row g-4">
    <% @pooja_types.each do |pooja| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <div class="card h-100 shadow-sm pooja-card">
          <!-- Placeholder Pooja Image -->
          <%= image_tag "https://source.unsplash.com/400x250/?puja,temple", class: "card-img-top", alt: pooja.name %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold"><%= pooja.name %></h5>
            <p class="card-text text-muted"><%= pooja.description.truncate(120) %></p>
            <p class="card-text"><strong>Price:</strong> â‚¹<%= pooja.price %></p>
            <p class="card-text"><strong>Duration:</strong> <%= pooja.duration %> min</p>
            <%= link_to "Book Now", new_puja_booking_path(pooja), class: "btn btn-success mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<%= render 'shared/footer' %>

<style>
/* Hero Slider */
.swiper {
  border-radius: 15px;
  overflow: hidden;
}

/* Pooja Cards */
.pooja-card {
  border-radius: 15px;
  transition: transform 0.3s, box-shadow 0.3s;
}
.pooja-card:hover {
  transform: translateY(-7px);
  box-shadow: 0 20px 30px rgba(0,0,0,0.2);
}

/* Buttons */
.btn-success {
  border-radius: 50px;
  padding: 0.5rem 1.5rem;
  font-weight: bold;
  transition: transform 0.2s, background-color 0.2s;
}
.btn-success:hover {
  transform: translateY(-2px);
  background-color: #28a745cc;
}

/* Headings */
h2 {
  font-size: 2.5rem;
}

/* Responsive tweaks */
@media(max-width:768px){
  .pooja-card img {
    height: 200px;
    object-fit: cover;
  }
}
</style>
